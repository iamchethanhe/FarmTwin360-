{
  "expo": {
    "name": "FarmTwin360",
    "slug": "farmtwin360-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.farmtwin360.mobile"
    },
    "android": {
      "package": "com.farmtwin360.mobile",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#4CAF50"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FarmTwin360 to access your camera for taking photos of incidents and checklists."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow FarmTwin360 to use your location for GPS tracking."
        }
      ]
    ]
  }
}
